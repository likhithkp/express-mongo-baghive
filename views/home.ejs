<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BagHive</title>
</head>
<style>
    /* General Styles */
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f9;
        color: #333;
    }

    header {
        background-color: #004d99;
        color: #fff;
        padding: 20px;
        text-align: center;
    }

    h1 {
        margin: 0;
        font-size: 2.5rem;
    }

    nav a {
        color: #fff;
        text-decoration: none;
        font-size: 1rem;
        margin-left: 20px;
    }

    nav a:hover {
        text-decoration: underline;
    }

    /* Main Section */
    main {
        padding: 20px;
    }

    .products {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
        justify-content: start;
    }

    .product-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        width: 220px;
        height: 350px;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-sizing: border-box;
    }

    .product-card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .product-card p {
        margin: 5px 0;
    }

    .product-card p strong {
        font-size: 1.1rem;
    }

    .product-card p:first-child {
        font-size: 1.3rem;
        color: #0073e6;
    }

    .add-product {
        margin-top: 30px;
        text-align: center;
    }

    .add-product .btn {
        padding: 10px 20px;
        font-size: 1.1rem;
        color: #fff;
        background-color: #28a745;
        border: none;
        border-radius: 8px;
        text-decoration: none;
    }

    .add-product .btn:hover {
        background-color: #218838;
    }

    /* Footer */
    footer {
        background-color: #222;
        color: #fff;
        text-align: center;
        padding: 10px;
        position: fixed;
        bottom: 0;
        width: 100%;
    }

    footer p {
        margin: 0;
    }

    .edit-btn {
        display: inline-block;
        margin-top: 10px;
        padding: 8px 16px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
    }

    .edit-btn:hover {
        background-color: #0056b3;
    }


    /* Media Queries for Responsiveness */
    @media (max-width: 768px) {
        .product-card img {
            height: 150px;
        }

        .product-card {
            height: auto;
            padding: 10px;
        }

        .products {
            justify-content: center;
        }

        .add-product .btn {
            width: 100%;
            padding: 15px;
            font-size: 1.2rem;
        }
    }
</style>
<body>
    <section class="products">
        <% if (products.length===0) { %>
            <p>No products available.</p>
            <% } else { %>
                <div class="product-grid">
                    <% products.forEach(function(product) { %>
                        <div class="product-card">
                            <img src="data:image/svg+xml;base64,<%= product.image.toString('base64') %>"
                                alt="<%= product.name %>">
                            <p><strong>
                                    <%= product.name %>
                                </strong></p>
                            <p>Price: <%= product.price %>
                            </p>
                            <p>Discount: <%= product.discount %>
                            </p>
                            <a href="/addToCart/<%= product._id %>" class="edit-btn">Add to Cart</a>
                        </div>
                        <% }); %>
                </div>
                <% } %>
    </section>
    <a href="/myCart/<%= user._id %>" class="edit-btn">Go to cart</a>
</body>
</html>